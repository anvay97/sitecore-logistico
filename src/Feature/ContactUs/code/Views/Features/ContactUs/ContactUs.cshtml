@using Sitecore.Mvc
@using Sitecore.Globalization


<section class="contact-section">
    <div class="container">
        @Html.Sitecore().Placeholder("contactUs-map")

        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">@Translate.Text("Contact Us Text")</h2>
            </div>
            @Html.Sitecore().Placeholder("contact-form")
            <div class="col-lg-3 offset-lg-1">
                @Html.Sitecore().Placeholder("contactUs-details")
            </div>
        </div>
    </div>
</section>
