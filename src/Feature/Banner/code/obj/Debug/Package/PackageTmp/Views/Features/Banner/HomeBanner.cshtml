@using Sitecore
@using Sitecore.Mvc
@using Sitecore.Data.Items
@using Sitecore.Data.Fields

@{
    Item item = Sitecore.Context.Item;
    ImageField imgField = item.Fields["Banner Image"];
    string imgLink = string.Empty;
    if (imgField != null && imgField.MediaItem != null)
    {
        imgLink = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);
    }
}

<style>
    .slider_bg_1 {
        background-image: url(@imgLink);
    }
</style>

<div class="slider_area">
    <div class="single_slider  d-flex align-items-center slider_bg_1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-8">
                    <div class="slider_text text-center justify-content-center">
                        <p>@Html.Sitecore().Field("Banner Title")</p>
                        <h3>
                            @Html.Sitecore().Field("Banner SubTitle")
                        </h3>
                                                                       
                        @Html.Sitecore().Field("Link", item, new { @class = "boxed-btn3", text = @Html.Sitecore().Field("Label", item) })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>