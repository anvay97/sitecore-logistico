@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation;
@using Sitecore.Data.Items
@using Sitecore.Data.Fields;

@model List<Item>

@if(Model == null)
{
    return;
}

<div class="transportaion_area">
    <div class="container">
        <div class="row">
                    
                @foreach (Item subChild in Model)
                {
                    string URL = Sitecore.Links.LinkManager.GetItemUrl(subChild);
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="single_transport">
                            <div class="icon">
                                @Html.Sitecore().Field("Service Image", subChild)
                            </div>
                            <h3><a href="@URL">
                            @Html.Sitecore().Field("Service Title", subChild)
                            </a></h3>
                            <p>
                                @Html.Sitecore().Field("Service Summary", subChild)
                            </p>
                        </div>
                    </div>
                }
            </div>
    </div>
</div>
