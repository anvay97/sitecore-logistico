@using Sitecore
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@using Sitecore.Data.Fields

@model List<Item>

@if (Model == null)
{
    return;
}

<style>
    .thumb {
        width: 360px;
        height: 260px;
        text-align: center;
    }

    .thumb img{
        width:auto !important;
    }
</style>


@{
    

    <div class="service_area">
        <div class="container">
            <div class="row">

                @foreach (Item subChild in Model)
                {
                    string URL = Sitecore.Links.LinkManager.GetItemUrl(subChild);
                    <div class="col-md-6 col-lg-4">
                        <div class="single_service">
                            <div class="thumb">
                                @Html.Sitecore().Field("Service Image", subChild)
                            </div>
                            <div class="service_info">
                                <h3><a href="@URL">@Html.Sitecore().Field("Service Title", subChild)</a></h3>
                                <p>@Html.Sitecore().Field("Service Summary", subChild)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}


