@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data
@using Sitecore.Data.Items


@{
    Database db = Sitecore.Context.Database;
    string datasourcePath = RenderingContext.Current.Rendering.DataSource;
    Item testimonialItem = db.GetItem(datasourcePath);

}


<div class="container">
    <div class="row">
        <ol>
            @foreach (Item item in testimonialItem.Children)
            {
            <li>
                <div class="section-top-border">
                    <h3 class="mb-30">@Html.Sitecore().Field("Author Name", item)</h3>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.Sitecore().Field("Author Image", item)
                            <span>@Html.Sitecore().Field("Author Designation", item)</span>
                        </div>
                        <div class="col-md-9 mt-sm-20">
                            @Html.Sitecore().Field("Author Description", item)
                        </div>
                    </div>
                </div>
            </li>                
            }
        </ol>                   
           
    </div>
</div>
