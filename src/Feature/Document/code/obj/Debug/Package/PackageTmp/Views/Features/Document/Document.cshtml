@using Sitecore.Mvc
@using Sitecore.Data.Items


@model List<Item>

@if (Model == null)
{
    return;
}

@foreach (Item document in Model)
{
    <div class="download_brochure d-flex align-items-center justify-content-between">
        <div class="download_left d-flex align-items-center">
            <div class="icon">
                @Html.Sitecore().Field("Document Icon", document)
            </div>
            <div class="download_text">
                <h3>@Html.Sitecore().Field("Document Title", document)</h3>
                <p>@Html.Sitecore().Field("Document Summary", document)</p>
            </div>
        </div>
        <div class="download_right">
            @Html.Sitecore().Field("Link", document, new { @class = "boxed-btn3-line", text = @Html.Sitecore().Field("Label", document) })
        </div>
    </div>
    <p></p>
}
